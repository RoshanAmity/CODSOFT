<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whiteshape"
                android:textColor="@color/colorPrimaryDark"
                android:padding="10sp"
                android:textSize="25sp"
                android:text="First, select your subject."
                android:layout_gravity="center"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whiteshape"
                android:textColor="@color/colorPrimaryDark"
                android:padding="10sp"
                android:layout_marginTop="10sp"
                android:textSize="25sp"
                android:text="After selecting your subject click on start button for start quiz."
                android:layout_gravity="center"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whiteshape"
                android:textColor="@color/colorPrimaryDark"
                android:padding="10sp"
                android:textSize="25sp"
                android:layout_marginTop="10sp"
                android:text="Wait for 2 second after selecting  your answer for check answer."
                android:layout_gravity="center"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whiteshape"
                android:textColor="@color/colorPrimaryDark"
                android:padding="10sp"
                android:textSize="25sp"
                android:layout_marginTop="10sp"
                android:text="Click on next button for next question."
                android:layout_gravity="center"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whiteshape"
                android:textColor="@color/colorPrimaryDark"
                android:padding="10sp"
                android:textSize="25sp"
                android:layout_marginTop="10sp"
                android:text="Click on result button for view your result."
                android:layout_gravity="center"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="Next"
                android:textSize="25sp"
                android:layout_marginTop="50sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                />

        </LinearLayout>
    </ScrollView>

</FrameLayout>